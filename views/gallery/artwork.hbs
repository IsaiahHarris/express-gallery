<div class="artwork-main-container">
  <div class="artwork-header">
    <div class="artwork-title">_ARCHITEKT</div>

  </div>
  <div class="artwork-container">
    <div class="image" style="background-image: url({{arts.link}})"></div>
    <div class="artwork-details">
      <div class="artwork-author">By: {{arts.author}}</div>
      <a href="/users/{{arts.author_id}}">View Posts By This User</a>
      <a class="artwork-link" href="/arts/{{arts.id}}">http://localhost:8080/arts/{{arts.id}}</a>
      <div class="artwork-description">{{arts.description}}</div>
    </div>
    <div class="you-dont-own">{{err}}</div>
  </div>
  <form class="back-to-gallery-form" action="/arts">
    <input class="back-to-gallery" type="submit" value="Back to Gallery">
  </form>
  <div class="artwork-action-container">

    <form action="/arts/{{arts.id}}/edit" method="GET" enctype="application/x-www-form-urlencoded">
      <input class="edit-item-button" type="submit" value="Edit Item">
    </form>
    <form action="/arts/{{arts.id}}" method="POST" enctype="application/x-www-form-urlencoded">
      <input type="hidden" name="_method" value="DELETE">
      <input class="delete-item-button" type="submit" value="Delete Item">
    </form>
  </div>
</div>