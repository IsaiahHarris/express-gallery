<div class="arts-home-header-container">
  <div class="arts-home-header-title">
    _ARCHITEKT
  </div>
</div>
<div class="arts-home-second-header-container">
  <form action="/arts/new">
    <input type="submit" value="add an artwork" class="add-artwork-button">
  </form>
</div>

<div class="arts-entries-container">
  {{#each arts}}
  <div class="arts-entry">
    <form action="/arts/{{id}}">
      <input type="submit" value="{{id}}">
    </form>
    <h5 class="author">Author: {{author}}</h5>
    <p class="link">Link: {{link}}</p>
    <p class="description">Description {{description}}</p>
  </div>
  {{/each}}
</div>